<!DOCTYPE html>
<html>
    {% block head %}
        {% include "layout/head.twig" %}
    {% endblock %}
    
    <body>
        {% block body %}
            {% block header %}
                {% include "layout/header.twig" %}
            {% endblock %}
            
            <h1 class="text-center mt-2">
                {% block title %}
                    {{ title }}
                {% endblock %}
            </h1>

            <main>
                {% block main %}
                    {% block section %}
                        {% block aside %}{% endblock %}
                    {% endblock %}
                {% endblock %}
            </main>

            <footer>
                    {% block footer %}{% endblock %}
            </footer>
       
            <script>
                {% block script %}
                    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
                {% endblock %}
            </script>
        {% endblock %}
    </body>
</html>
