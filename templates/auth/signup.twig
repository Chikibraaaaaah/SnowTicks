{% extends 'layout/layout.twig' %}

{% block main %}

<div class="main mt-5">

    <div class="row d-flex">
    
        <form class="col-6 mx-auto" action="{{ path('app_auth_signup') }}" method="post">
            <div class="mb-3">
                <label for="userName" class="form-label">Nom d'utilisateur</label>
                <input type="text" class="form-control" id="userName" name="userName" aria-describedby="userName-field">
                <div id="userName" class="form-text">Ne partagez pas votre mot de passe.</div>
            </div>
            <div class="mb-3">
                <label for="email" class="form-label">Adresse email</label>
                <input type="email" class="form-control" id="email" name="email" aria-describedby="email">
                <div id="email" class="form-text">Ne partagez pas votre mot de passe.</div>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Mot de passe</label>
                <input type="password" class="form-control" id="password" name="password">
            </div>
            <div class="mb-3">
                <label for="passwordCheck" class="form-label">Veuillez confirmer le mot de passe</label>
                <input type="password" class="form-control" id="passwordCheck" name="passwordCheck">
            </div>
            <button type="submit" class="btn btn-primary">S'inscrire'</button>
            
        </form>
        <div class="col d-block">
            <a href="{{ path('app_auth') }}" class="btn btn-primary">
            <button>Se connecter</button></a>
        </div>

    </div>

</div>
{% endblock %}
